<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp"
    android:orientation="vertical"
    android:layout_margin="4dp">

    <RelativeLayout
        android:id="@+id/eventInfo_relativeLayout"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/eventImage_imageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="2dp">
            </ImageView>

            <LinearLayout
                android:id="@+id/eventInfo_linearLayout"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eventName_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="15dp"
                    android:text="Line 1"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="12dp"/>

                <TextView
                    android:id="@+id/eventDescription_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="15dp"
                    android:text="line 2"
                    android:textSize="17sp"
                    tools:layout_editor_absoluteX="72dp"
                    tools:layout_editor_absoluteY="45dp">

                </TextView>
            </LinearLayout>

        </LinearLayout>

        <Switch
            android:id="@+id/eventActivation_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:text=""
            android:layout_alignParentRight="true"
            android:theme="@style/SwitchTheme"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>