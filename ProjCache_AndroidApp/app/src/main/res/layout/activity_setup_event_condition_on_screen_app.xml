<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetupEventConditionOnScreenAppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/app_Picker_title"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:text="Application Picker"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/app_picker_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingTop="5sp"
                    android:text="Please select one or more application to trigger the event"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <ListView
                    android:id="@+id/selected_app_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp" />


                <Button
                    android:id="@+id/add_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:paddingLeft="20dp"
                    android:text="+ Add Launching App"
                    android:textAlignment="textStart"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/application_picker_activity_complete_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>