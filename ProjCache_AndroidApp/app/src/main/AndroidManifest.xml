<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ordinary.android.projectcache"
    tools:ignore="GoogleAppIndexingWarning">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AppListActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WIFISelectorActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EventSetupActivity"
            android:label="@string/title_event_setup_activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetupEventActionsSelectionActivity"
            android:label="@string/title_activity_setup_event_actions_selection"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetupEventConditionsSelectionActivity"
            android:label="@string/title_activity_setup_event_conditions_selection"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetupEventConditionDateTimeActivity"
            android:label="@string/title_activity_setup_event_condition_time"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TimeSelectorActivity"
            android:label="@string/title_activity_time_selector_activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetupEventConditionOnScreenAppActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetupEventActionScreenBrightness"
            android:label="@string/title_activity_setup_event_action_screen_brightness"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetupEventConditionWifiActivity"
            android:label="@string/title_activity_setup_event_condition_wifi"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetupEventActionBarCodeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetupEventActionBrowseUrlActivity"
            android:label="@string/title_activity_setup_event_action_browse_url"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SetupEventActionVolumeActivity"
            android:label="@string/title_setup_event_action_volume_activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>


        <activity
            android:screenOrientation="portrait"
            android:name=".ManageEventsActivity"
            android:label="@string/title_activity_events_management"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="barcode" />

    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
<!--    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

<!--    <uses-permission android:name="android.permission.INTERNET" />-->
    <uses-permission android:name="android.permission.CAMERA" />


    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


</manifest>