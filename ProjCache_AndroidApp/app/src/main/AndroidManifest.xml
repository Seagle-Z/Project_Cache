<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ordinary.android.projectcache">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.ordinary.android.projectcache.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ordinary.android.projectcache.AppListActivity" />
        <activity android:name="com.ordinary.android.projectcache.EventSetupActivity" />
        <activity android:name="com.ordinary.android.projectcache.ActionTaskSelectionActivity" />
        <activity android:name="com.ordinary.android.projectcache.TriggerMethodSelectionActivity" />
        <activity android:name="com.ordinary.android.projectcache.TriggerMethodDateTimeActivity" />
        <activity android:name="com.ordinary.android.projectcache.TimeSelectorActivity" />
        <activity android:name="com.ordinary.android.projectcache.TriggerMethodAppLaunchActivity" />

    </application>

</manifest>